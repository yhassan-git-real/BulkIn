<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BulkIn.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="BulkIn.Desktop.Views.ProcessingView"
             x:DataType="vm:ProcessingViewModel"
             Background="#F5F6FA">

    <Design.DataContext>
        <vm:ProcessingViewModel/>
    </Design.DataContext>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="F5" Command="{Binding StartProcessingCommand}"/>
        <KeyBinding Gesture="Ctrl+P" Command="{Binding PauseProcessingCommand}"/>
    </UserControl.KeyBindings>

    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        
        <!-- Source Path Selection Bar -->
        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Padding="24,12">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                <Border Grid.Column="0" 
                        Background="#F3F4F6" 
                        CornerRadius="4" 
                        Padding="8,6">
                    <TextBlock Text="ðŸ“‚" FontSize="14"/>
                </Border>
                <TextBlock Grid.Column="1" 
                           Text="{Binding SourceFilePath}" 
                           FontSize="13"
                           Foreground="#374151"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
                <Button Grid.Column="2"
                        Command="{Binding RefreshFilesCommand}"
                        Background="#F3F4F6"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10,6"
                        Cursor="Hand"
                        ToolTip.Tip="Refresh file list">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="ðŸ”„" FontSize="12"/>
                        <TextBlock Text="Refresh" FontSize="12" Foreground="#374151" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="55*,45*" Margin="20" ColumnSpacing="16">
            
            <!-- Left Panel: File Queue Card -->
            <Border Grid.Column="0" 
                    Background="#FFFFFF" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    BoxShadow="0 1 3 0 #1018280A">
                <Grid RowDefinitions="Auto,*,Auto">
                    
                    <!-- Card Header -->
                    <Border Grid.Row="0" 
                            Background="#F9FAFB" 
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,0,0,1"
                            Padding="16,12">
                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ“" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Files Queue" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#111827"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- File List -->
                    <Border Grid.Row="1" Padding="0">
                        <ListBox ItemsSource="{Binding FileList}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            Padding="16,10"
                                            BorderBrush="#F3F4F6"
                                            BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Status Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="28" 
                                                    Height="28" 
                                                    Background="#F3F4F6" 
                                                    CornerRadius="4"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="{Binding StatusIcon}"
                                                           Foreground="{Binding StatusColor}"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- File Name & Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="3">
                                                <TextBlock Text="{Binding FileName}"
                                                           FontSize="13"
                                                           FontWeight="Medium"
                                                           Foreground="#111827"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ErrorMessage}"
                                                           FontSize="11"
                                                           Foreground="#EF4444"
                                                           TextTrimming="CharacterEllipsis"
                                                           IsVisible="{Binding !!ErrorMessage}"/>
                                            </StackPanel>
                                            

                                            
                                            <!-- Records Count -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding RecordsProcessed, StringFormat='{}{0:N0}'}"
                                                       FontSize="11"
                                                       FontWeight="Medium"
                                                       Foreground="#6B7280"
                                                       VerticalAlignment="Center"
                                                       IsVisible="{Binding RecordsProcessed}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                </Style>
                                <Style Selector="ListBoxItem:pointerover">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Style>
                            </ListBox.Styles>
                        </ListBox>
                    </Border>
                    
                    <!-- Progress Footer -->
                    <Border Grid.Row="2" 
                            Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding ProgressStatusText}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="#374151"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding ProgressPercentageText}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#0078D4"/>
                            </Grid>
                            <ProgressBar Value="{Binding ProgressPercentage}"
                                         Minimum="0"
                                         Maximum="100"
                                         Height="6"
                                         CornerRadius="3"
                                         Background="#E5E7EB"
                                         Foreground="#0078D4"/>
                            <TextBlock Text="{Binding CurrentFileProcessing}"
                                       FontSize="11"
                                       Foreground="#6B7280"
                                       FontStyle="Italic"
                                       TextTrimming="CharacterEllipsis"
                                       IsVisible="{Binding !!CurrentFileProcessing}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel: Controls & Statistics -->
            <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*" RowSpacing="16">
                
                <!-- Controls Card -->
                <Border Grid.Row="0" 
                        Background="#FFFFFF" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="14"
                        BoxShadow="0 1 3 0 #1018280A">
                    <StackPanel Spacing="10">
                        <!-- Section Title -->
                        <StackPanel Spacing="3">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="âš¡" FontSize="14"/>
                                <TextBlock Text="Controls" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#111827"/>
                            </StackPanel>
                            <Rectangle Height="1" Fill="#E5E7EB" />
                        </StackPanel>

                        <!-- Action Buttons - Horizontal Layout -->
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                            <!-- Start Button -->
                            <Button Grid.Column="0"
                                    Content="â–¶ Start" 
                                    Command="{Binding StartProcessingCommand}"
                                    IsEnabled="{Binding CanStartProcessing}"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Padding="10,7"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Cursor="Hand"
                                    ToolTip.Tip="Start processing (F5)">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Style>
                                    <Style Selector="Button:disabled">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <!-- Pause Button -->
                            <Button Grid.Column="1"
                                    Content="â¸ Pause" 
                                    Command="{Binding PauseProcessingCommand}"
                                    IsEnabled="{Binding CanPauseProcessing}"
                                    Background="#F59E0B"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Padding="10,7"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Cursor="Hand"
                                    ToolTip.Tip="Pause (Ctrl+P)">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#D97706"/>
                                    </Style>
                                    <Style Selector="Button:disabled">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <!-- Stop Button -->
                            <Button Grid.Column="2"
                                    Content="â¹ Stop" 
                                    Command="{Binding StopProcessingCommand}"
                                    IsEnabled="{Binding CanStopProcessing}"
                                    Background="#EF4444"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Padding="10,7"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Cursor="Hand"
                                    ToolTip.Tip="Stop processing">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Style>
                                    <Style Selector="Button:disabled">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Statistics Card -->
                <Border Grid.Row="1" 
                        Background="#FFFFFF" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="14"
                        BoxShadow="0 1 3 0 #1018280A">
                    <StackPanel Spacing="10">
                        <!-- Section Title -->
                        <StackPanel Spacing="3">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ“Š" FontSize="14"/>
                                <TextBlock Text="Statistics" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#111827"/>
                            </StackPanel>
                            <Rectangle Height="1" Fill="#E5E7EB" />
                        </StackPanel>

                        <!-- Stats Grid - Compact Design -->
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            
                            <!-- Row 1: Total Files & Processed -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="8">
                                <!-- Total Files -->
                                <Border Grid.Column="0"
                                        Background="#F9FAFB" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Total Files" 
                                                   FontSize="10" 
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding TotalFilesCount}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#111827"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Processed -->
                                <Border Grid.Column="1"
                                        Background="#ECFDF5" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Processed" 
                                                   FontSize="10" 
                                                   Foreground="#065F46"/>
                                        <TextBlock Text="{Binding ProcessedFilesCount}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#10B981"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Row 2: Failed & Records -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8">
                                <!-- Failed -->
                                <Border Grid.Column="0"
                                        Background="#FEF2F2" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Failed" 
                                                   FontSize="10" 
                                                   Foreground="#991B1B"/>
                                        <TextBlock Text="{Binding FailedFilesCount}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#EF4444"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Records -->
                                <Border Grid.Column="1"
                                        Background="#EFF6FF" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Records" 
                                                   FontSize="10" 
                                                   Foreground="#1E3A8A"/>
                                        <TextBlock Text="{Binding TotalRecordsProcessed}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#3B82F6"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Row 3: Duration & Rate -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="8">
                                <!-- Duration -->
                                <Border Grid.Column="0"
                                        Background="#F9FAFB" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Duration" 
                                                   FontSize="10" 
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding ElapsedTime}" 
                                                   FontSize="13" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#374151"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Rate -->
                                <Border Grid.Column="1"
                                        Background="#F9FAFB" 
                                        CornerRadius="5" 
                                        Padding="10,8">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Rate" 
                                                   FontSize="10" 
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding ProcessingRate}" 
                                                   FontSize="11" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Status Indicator -->
                <Border Grid.Row="2" 
                        Background="#FFFFFF" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="18"
                        VerticalAlignment="Top"
                        BoxShadow="0 1 3 0 #1018280A">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="8" 
                                    Height="8" 
                                    Background="#10B981" 
                                    CornerRadius="4"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="System Ready" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Foreground="#111827"/>
                        </StackPanel>
                        <TextBlock Text="All systems operational. Ready to process files." 
                                   FontSize="11" 
                                   Foreground="#6B7280"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>

</UserControl>
