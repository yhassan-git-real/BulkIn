<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BulkIn.Desktop.App"
             xmlns:local="using:BulkIn.Desktop"
             xmlns:converters="using:BulkIn.Desktop.Converters"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <!-- Converters -->
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        
        <!-- Color Palette -->
        <Color x:Key="PrimaryBlue">#0078D4</Color>
        <Color x:Key="PrimaryBlueHover">#106EBE</Color>
        <Color x:Key="SuccessGreen">#10B981</Color>
        <Color x:Key="WarningOrange">#F59E0B</Color>
        <Color x:Key="ErrorRed">#EF4444</Color>
        <Color x:Key="InfoBlue">#3B82F6</Color>
        <Color x:Key="TextPrimary">#1F2937</Color>
        <Color x:Key="TextSecondary">#6B7280</Color>
        <Color x:Key="TextMuted">#9CA3AF</Color>
        <Color x:Key="BackgroundWhite">#FFFFFF</Color>
        <Color x:Key="BackgroundLight">#F9FAFB</Color>
        <Color x:Key="BackgroundGray">#F3F4F6</Color>
        <Color x:Key="BorderLight">#E5E7EB</Color>
        <Color x:Key="BorderMedium">#D1D5DB</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
        <SolidColorBrush x:Key="PrimaryBlueHoverBrush" Color="{StaticResource PrimaryBlueHover}"/>
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
        <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrange}"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="InfoBlueBrush" Color="{StaticResource InfoBlue}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
        <SolidColorBrush x:Key="BackgroundWhiteBrush" Color="{StaticResource BackgroundWhite}"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
        <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource BackgroundGray}"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLight}"/>
        <SolidColorBrush x:Key="BorderMediumBrush" Color="{StaticResource BorderMedium}"/>

        <!-- Typography -->
        <FontFamily x:Key="PrimaryFont">Segoe UI, Arial, sans-serif</FontFamily>
        <FontFamily x:Key="MonospaceFont">Consolas, Courier New, monospace</FontFamily>
        
        <!-- Spacing -->
        <Thickness x:Key="SpacingXS">4</Thickness>
        <Thickness x:Key="SpacingSM">8</Thickness>
        <Thickness x:Key="SpacingMD">12</Thickness>
        <Thickness x:Key="SpacingLG">16</Thickness>
        <Thickness x:Key="SpacingXL">24</Thickness>
        
        <!-- Corner Radius -->
        <CornerRadius x:Key="RadiusSM">4</CornerRadius>
        <CornerRadius x:Key="RadiusMD">6</CornerRadius>
        <CornerRadius x:Key="RadiusLG">8</CornerRadius>
        
        <!-- Shadows -->
        <BoxShadows x:Key="ShadowSM">0 1 2 0 #10000000</BoxShadows>
        <BoxShadows x:Key="ShadowMD">0 4 6 -1 #10000000, 0 2 4 -1 #06000000</BoxShadows>
        <BoxShadows x:Key="ShadowLG">0 10 15 -3 #10000000, 0 4 6 -2 #05000000</BoxShadows>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <!-- Button Styles -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueHoverBrush}"/>
        </Style>
        
        <Style Selector="Button.primary:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#005A9E"/>
        </Style>
        
        <Style Selector="Button.primary:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="#D1D5DB"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BackgroundGrayBrush}"/>
        </Style>

        <Style Selector="Button.success">
            <Setter Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.danger">
            <Setter Property="Background" Value="{StaticResource ErrorRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- TextBox Styles -->
        <Style Selector="TextBox.modern">
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMD}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource BackgroundWhiteBrush}"/>
        </Style>
        
        <Style Selector="TextBox.modern:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{StaticResource BackgroundWhiteBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusLG}"/>
            <Setter Property="Padding" Value="{StaticResource SpacingLG}"/>
            <Setter Property="BoxShadow" Value="{StaticResource ShadowSM}"/>
        </Style>

        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Label Style -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Info Text Style -->
        <Style Selector="TextBlock.info">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </Application.Styles>
</Application>